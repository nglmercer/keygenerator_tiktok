{
  "name": "keygenerator",
  "description": "tiktok-keygenerator - Electron application for generating TikTok stream keys via Streamlabs API integration.",
  "author": {
    "name": "KeyGenerator Team",
    "email": "team@keygenerator.com"
  },
  "module": "index.ts",
  "main": "./dist/index.js",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "typecheck": "bunx tsc --noEmit",
    "start": "bun run build && electron .",
    "build": "bun run typecheck && bun run scripts/build.ts",
    "build:dist": "bun run build && electron-builder"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron-builder": "^26.7.0",
    "electron": "^40.1.0",
    "typescript": "^5"

  },
  "dependencies": {
    "axios": "^1.13.2"
  },
  "build": {
    "publish": "never",
    "appId": "com.keygenerator.tiktok",
    "productName": "TikTok KeyGenerator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}
